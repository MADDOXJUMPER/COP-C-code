#include<stdio.h>
int main()
{
    char ch;
    int age; 
    int ID;
    int grade1;
    int grade2;
    int grade3;

    printf("Student Rating of Semester (A/B/C):");
    scanf("%ch",ch)

    printf("Student ID:");
    scanf("%d",ID);

    printf("Age:");
    scanf("%d",age);

    printf("grade1:");
    scanf("%d",grade1);

    printf("grade2:");
    scanf("%d", grade2)

    printf("grade1:");
    scanf("%d", grade3);

    int average = (grade1 + grade2 + grade3) / 3.0;

printf("\n********** Student Summary **********\n\n");

printf("Student Rating    :%c\n", rating);
printf("Student Summary   :%d\n", ID);
printf("Age               :%d\n", age);
printf("Average Grade     : %.2f\n", average);

printf("\nAge Fromatting : \n");
printf("Normal   : %d\n", age);
printf("Width 5  : %5d\n", age);
printf("Zero-pad : %05d\n", age);

return 0;
}